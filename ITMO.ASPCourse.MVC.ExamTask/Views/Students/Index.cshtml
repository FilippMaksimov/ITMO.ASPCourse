@model IEnumerable<ITMO.ASPCourse.MVC.ExamTask.Models.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @Html.Action("Create")
</div>
<table style="border:2px solid gold; width:700px; font-size:larger; border-collapse:unset">
    <tr style="background-color: palegoldenrod">
        <th style="height:40px;">Student Name</th>
        <th>Group No</th>
        <th>Email</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td style="height:40px">
                @Html.DisplayFor(modelItem => item.StudentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
    }
</table>
